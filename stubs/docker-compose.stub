version: '3'

services:
  web:
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - APACHE_RUN_USER=www-data
      - APACHE_RUN_GROUP=www-data
    ports:
      - 8000:80
    volumes:
      - .:/plugin
      - .env:/var/www/.env
      - ./craft/templates:/var/www/templates
      - ./craft/web/assets:/var/www/web/assets
    depends_on:
      - db
  db:
    image: mysql
    command: --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_ROOT_PASSWORD: "${DB_ROOT_PASSWORD}"
      MYSQL_DATABASE: "${DB_DATABASE}"
      MYSQL_USER: "${DB_USER}"
      MYSQL_PASSWORD: "${DB_PASSWORD}"
    volumes:
      - "{{dbVolume}}:/var/lib/msql"
  adminer:
    image: adminer
    ports:
      - 8080:8080
volumes:
  {{dbVolume}}: